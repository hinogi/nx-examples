{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "noUnusedLocals": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nx-example/cart/home-page": ["cart/home-page/src/index.ts"],
      "@nx-example/cart/state": ["cart/state/src/index.ts"],
      "@nx-example/cart/state/react": ["cart/state/src/react.ts"],
      "@nx-example/products/data": ["products/data/src/index.ts"],
      "@nx-example/products/data/testing": ["products/data/src/testing.ts"],
      "@nx-example/products/detail-page": ["products/detail-page/src/index.ts"],
      "@nx-example/products/home-page": ["products/home-page/src/index.ts"],
      "@nx-example/products/state": ["products/state/src/index.ts"],
      "@nx-example/products/state/react": ["products/state/src/react.ts"],
      "@nx-example/products/types": ["products/types/src/index.ts"],
      "@nx-example/products/ui": ["products/ui/src/index.ts"],
      "@nx-example/shared/e2e-utils": ["shared/e2e-utils/src/index.ts"],
      "@nx-example/shared/header": ["shared/header/src/index.ts"],
      "@nx-example/shared/jsxify": ["shared/jsxify/src/index.ts"],
      "@nx-example/shared/styles": ["shared/styles/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
