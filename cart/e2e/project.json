{
  "name": "cart-e2e",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "cart/e2e/src",
  "projectType": "application",
  "targets": {
    "e2e": {
      "executor": "@nx/cypress:cypress",
      "options": {
        "cypressConfig": "cart/e2e/cypress.config.ts",
        "devServerTarget": "cart-frontend:serve",
        "testingType": "e2e"
      },
      "configurations": {
        "production": {
          "devServerTarget": "cart-frontend:serve:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": ["cart/e2e/**/*.{ts,tsx,js,jsx}"]
      },
      "outputs": ["{options.outputFile}"]
    }
  },
  "tags": ["scope:cart", "type:e2e"],
  "implicitDependencies": ["cart"]
}
